<apex:page standardController="Merchandise__c">
    <apex:form >  
        <apex:pageMessages />     
        <apex:pageBlock title="Edit Merchandise"> 
            <apex:pageBlockSection columns="1">
            <apex:inputField value="{! Merchandise__c.Name }"/> 
            <apex:inputField value="{! Merchandise__c.Price__c }"/> 
            <apex:inputField value="{! Merchandise__c.Quantity__c }"/>       
        </apex:pageBlockSection>   
        <apex:pageBlockButtons >
            <apex:commandButton action="{! save }" value="Save" />       
        </apex:pageBlockButtons>   
      </apex:pageBlock>       
    </apex:form>
</apex:page>