<apex:page standardController="Producto__c">
    <apex:form >  
        <apex:pageMessages />     
        <apex:pageBlock title="Crear/Editar Productos"> 
            <apex:pageBlockSection columns="1">
                <apex:inputField value="{! Producto__c.Name }"/> 
                <apex:inputField value="{! Producto__c.Precio__c }"/> 
                <apex:inputField value="{! Producto__c.Cantidad__c }"/>       
            </apex:pageBlockSection>   
        <apex:pageBlockButtons >
            <apex:commandButton action="{! save }" value="Guardar" />       
        </apex:pageBlockButtons>   
      </apex:pageBlock>       
    </apex:form>
</apex:page>